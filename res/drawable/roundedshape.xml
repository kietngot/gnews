<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" 
        android:color="@color/themebackgroundcolor" >
		<shape>
			<solid android:color="@color/themessemitransparentlightcolor" />
			<corners android:radius="8sp"/>
			<stroke android:width="4px" android:color="@color/themebackgroundcolor"/>
		</shape>
	</item>
	
	<item android:state_pressed="false" 
	    android:color="@color/themebasecolor" >
		<shape>
			<solid android:color="@color/themessemitransparentcolor" />
			<corners android:radius="8sp"/>
			<stroke android:width="2px" android:color="@color/themebasecolor"/>
		</shape>
	</item>
</selector>