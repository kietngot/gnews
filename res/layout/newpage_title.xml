<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/titlebackgroundcolor" >

       <ImageButton
	        android:id="@+id/ibNewsList"
	        android:layout_width="32dp"
	        android:layout_height="32dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/buttonstyle"
	        android:src="@drawable/ic_newslist" />

    <ImageView 
        android:id="@+id/ibPageFavIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ibNewsList"
        android:background="@color/themebackgroundcolor"
        android:src="@drawable/ic_webkit" />

    <TextView
        android:id="@+id/tvPageUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ibPageFavIcon"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/ibPageFavIcon"
        android:text="Loading..."
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:textColorHint="@color/themetextcolor"
        android:textSize="16dp" />

</RelativeLayout>